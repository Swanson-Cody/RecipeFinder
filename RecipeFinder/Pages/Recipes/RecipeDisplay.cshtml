@page
@model RecipeFinder.Pages.RecipeDisplayModel
@{
    ViewData["Title"] = "RecipeDisplay";
}

<head>
    <link rel="stylesheet" href="~/css/recipedisplay.css" />
</head>
<div>
    <h1>@Model.Recipe.Title</h1>
    <p class="subcontent">
        Added on @Html.Label(@Model.Recipe.DateAdded.ToShortDateString())
    </p>
</div>
<h3>Ingredients</h3>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Measurement</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Recipe.Ingredients)
        {
            <tr class="border-bottom">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Measurement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="positionInstructions">
    <h3>Instructions</h3>
    @foreach (var line in @Model.Recipe.Instruction.Split("\r\n"))
    {
        if (string.IsNullOrEmpty(line))
        {
            <br/>
        }
        else
        {
            <div>@line</div>
        }
    }
</div>
<br/>
<br/>
<div class="alignArrowWithText">
    <a asp-page="Index">
        <img src="~/images/returnarrow.png" alt="return arrow">
        <span>Back to Recipes</span>
    </a>
</div>
@page
@using RecipeFinder.Models
@model RecipeFinder.RecipeCreateModel

@{
    ViewData["Title"] = "Create";
    var ingredients = new List<Ingredient>
{
        new Ingredient()
    };
}

<h1>Create</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Title" class="control-label"></label>
                <input asp-for="Recipe.Title" class="form-control" />
                <span asp-validation-for="Recipe.Title" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Recipe.DateAdded" class="control-label"></label>
                    <input asp-for="Recipe.DateAdded" class="form-control" />
                    <span asp-validation-for="Recipe.DateAdded" class="text-danger"></span>
                </div>*@
            <div class="ingredientborder">
                <label>Ingredients</label>
                @for (int i = 0; i < Model.Ingredients?.Count; i++)
                {
                    <input asp-for="@i" type="hidden" />
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="@Model.Ingredients[i].Name" placeholder="Enter ingredient name">
                        <input type="text" class="form-control" asp-for="@Model.Ingredients[i].Quantity" placeholder="Qty">
                        <select asp-for="@Model.Ingredients[i].Measurement" asp-items="Html.GetEnumSelectList<Measurements>()" class="form-control" id="measurement_input">
                            <option selected="selected" value="">Measurement Type</option>
                        </select>
                        <textarea rows="3" class="form-control" asp-for="@Model.Ingredients[i].Notes" placeholder="Notes"></textarea>
                    </div>

                    <button type="submit" onclick="removeingredient" asp-route-index="@i">Remove Ingredient</button>
                }

                <button type="submit" asp-page-handler="addingredient">Add Ingredient</button>
            </div>
            @*<div class="form-group">
                    <label asp-for="Recipe.Ingredients..Name" class="control-label"></label>
                    <input asp-for="Ingredient.Name" class="form-control" />
                    <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ingredient.Quantity" class="control-label"></label>
                    <input asp-for="Ingredient.Quantity" class="form-control" />
                    <span asp-validation-for="Ingredient.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ingredient.Measurement" class="control-label"></label>
                    <input asp-for="Ingredient.Measurement" class="form-control" />
                    <span asp-validation-for="Ingredient.Measurement" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Recipe.Instruction" class="control-label"></label>
                <textarea rows="3" asp-for="Recipe.Instruction" class="form-control"></textarea>
                <span asp-validation-for="Recipe.Instruction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="text-center">
    <h1 class="display-4">Welcome<span>to the</span> <span><em class="addTitleColor">RecipeFinder</em></span></h1>
</div>

<figure>
    <figcaption class="myCaptions text-center">Digitize your recipes!</figcaption>
